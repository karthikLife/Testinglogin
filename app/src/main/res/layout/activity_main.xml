<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#77a5c6"
    tools:context="com.example.hp.testinglogin.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:inputType="text"
        android:textColorHint="#ffffff"
        android:hint="Enter mail Id"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/ic_msg"
        android:layout_marginTop="180dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:inputType="text"
        android:textColorHint="#ffffff"
        android:hint="Enter Password"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/email"
        android:drawableLeft="@drawable/ic_lock"
        android:layout_marginTop="10dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/signup"
        android:layout_below="@+id/password"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Sign up"
        android:background="#ffffff"
        android:textSize="20dp"
        android:textColor="#79010315"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login"
        android:text="Login"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:textColor="#ffffff"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/fb"
        android:layout_below="@+id/signup"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Sign up with Facebook"
        android:background="#fb020016"
        android:textSize="10dp"
        android:textColor="#ffffff"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/google"
        android:layout_below="@+id/fb"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Sign up with Google plus"
        android:background="#dc0917"
        android:textSize="10dp"
        android:textColor="#ffffff"/>



</RelativeLayout>
